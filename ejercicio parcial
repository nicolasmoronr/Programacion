#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main();

{
	float suma,x,f,p;
	int x,n;
	cout>> n;
	cin>> x;
	suma=7;
	p=1
	for(i=1;1<=n;i=i+1)
		(
		if(1%2==0)
			suma=suma-(pow(x,1)/((i+1)*p);
		else
			suma=suma+(pow(x,1)/((i+1)*p);
	)
		cout<<Suma;
	getch () ;
}

