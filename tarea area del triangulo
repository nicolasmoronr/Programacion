#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
int main()
{   
	float a,b,c,s,area;
	cout<<"ingrese lado 1:";
	cin>>a;
	cout<<"ingrese lado 2:";
	cin>>b;
	cout<<"ingrese lado 3:";
	cin>>c;
	s=(a+b+c)/2;
		area = sqrt(s*(s-a)*(s-b)*(s-c));
		cout<<area;
	getch();
}
