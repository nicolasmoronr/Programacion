#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main ()
{
	int Num1,Num2,Res;

	cout<<"introdusca numero";
	cin>> Num1;
	cout<<"introdusca numero";
	cin>> Num2;
	if ((Num1 % 2==0) && (Num2 % 2==0))
		Res=(Num1 + Num2);
	else
		Res=(Num1 * Num2);
	cout<<Res;
	getch ();
	return 0;
}
