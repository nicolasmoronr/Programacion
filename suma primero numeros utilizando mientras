#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()

{ 
	int suma, i, N, cont ;

	cout << "ingresar el valor de N:";
    cin >> N;
	suma = 0;
	i=1;
    cont=2;
    while(i<=N)
	{
		suma=suma+cont;
	    cont=cont+2;
		i=i+1;
	}
	cout<< suma;
	getch ();
}
